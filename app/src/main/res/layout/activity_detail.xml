<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail"
    android:background="#F0E5CF"
    android:orientation="vertical">-*

    <ImageView
        android:id="@+id/detailPhone"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="140dp"
        android:src="@drawable/samplefhone"/>

    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="IPHONE 13 PRO"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_bold" />

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spesification"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textSize="25sp"
        android:layout_marginLeft="25dp" />


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <TextView
                   android:id="@+id/txRelease"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto"
                   android:text="Released 2020, November 13"
                   android:textColor="@color/black"
                   android:textSize="23sp"
                   android:padding="10dp"
                   android:layout_marginLeft="10dp"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <TextView
                   android:id="@+id/txDimension"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="@font/roboto"
                   android:padding="10dp"
                   android:text="228g, 7.4mm thickness"
                   android:textColor="@color/black"
                   android:textSize="23sp" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <TextView
                   android:id="@+id/txIos"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto"
                   android:text="iOS 14.1, up to iOS 15"
                   android:textColor="@color/black"
                   android:textSize="23sp"
                   android:padding="10dp"
                   android:layout_marginLeft="10dp"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <TextView
                   android:id="@+id/txStorage"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="@font/roboto"
                   android:padding="10dp"
                   android:text="128GB/256GB/512GB storage, no card slot"
                   android:textColor="@color/black"
                   android:textSize="23sp" />

           </LinearLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1.8dp"
               android:background="@color/black"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <ImageView
               android:layout_width="70dp"
               android:layout_height="80dp"
               android:src="@drawable/lgbattery"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="25dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="BATTERY"
               android:textSize="30sp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="25dp"
               android:textColor="@color/black"
               android:fontFamily="@font/montserrat_bold"/>



        </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               app:cardCornerRadius="16dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@color/white"
                   android:padding="20dp">

                   <TextView
                       android:id="@+id/dtBattery"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/roboto"
                       android:lineHeight="30dp"
                       android:text="@string/batt"
                       android:textColor="@color/black"
                       android:textSize="20sp" />

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="70dp"
                   android:src="@drawable/lgsound"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="25dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="SOUND"
                   android:layout_marginLeft="10dp"
                   android:textSize="30sp"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat_bold"/>



           </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               app:cardCornerRadius="16dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@color/white"
                   android:padding="20dp">

                   <TextView
                        android:id="@+id/dtSound"
                       android:lineHeight="30dp"
                       android:textSize="20sp"
                       android:fontFamily="@font/roboto"
                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/batt"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="70dp"
                   android:layout_height="75dp"
                   android:src="@drawable/lgfeatures"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="25dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="FEATURES"
                   android:layout_marginLeft="10dp"
                   android:textSize="30sp"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat_bold"/>



           </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               app:cardCornerRadius="16dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@color/white"
                   android:padding="20dp">

                   <TextView
                       android:id="@+id/dtFeatures"
                       android:lineHeight="30dp"
                       android:textSize="20sp"
                       android:fontFamily="@font/roboto"
                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/batt"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:layout_width="70dp"
                   android:layout_height="60dp"
                   android:src="@drawable/lgcamera"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="25dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="MAIN CAMERA"
                   android:layout_marginLeft="15dp"
                   android:textSize="30sp"
                   android:layout_marginTop="15dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat_bold"/>



           </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               app:cardCornerRadius="16dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@color/white"
                   android:padding="20dp">

                   <TextView
                       android:id="@+id/dtCamera"
                       android:lineHeight="30dp"
                       android:textSize="20sp"
                       android:fontFamily="@font/roboto"
                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/batt"/>

               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>



   </ScrollView>


</LinearLayout>